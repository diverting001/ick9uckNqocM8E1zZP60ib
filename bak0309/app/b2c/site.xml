    <module controller='site_gallery' >
        <name>gallery</name>
        <title>商品列表页</title>
        <disable>true</disable>
		<allow_seo act="index">
            <title>商品列表页</title>
            <config id="{ENV_shop_name}">商店名称</config>
            <config id="{ENV_search_num}">搜索到的商品个数</config>
            <config id="{ENV_goods_cat}">商品分类</config>
            <config id="{ENV_goods_cat_p}">商品分类路径</config>
            <config id="{ENV_goods_type}">商品类型</config>
            <param>
                <seo_title>{ENV_shop_name}_{ENV_goods_cat}</seo_title>
                <seo_keywords>{ENV_goods_cat}</seo_keywords>
                <seo_content>{ENV_goods_cat}</seo_content>
                <seo_nofollow>否</seo_nofollow>
                <seo_noindex>否</seo_noindex>
            </param>
            <hidden>true</hidden>
        </allow_seo>
    </module>

